execute pathogen#infect()
" colorscheme dracula
colorscheme jummidark
" identation size
set tabstop=2
" identify filetype and ident
filetype plugin indent on
" color editor
syntax on
" tab identation size
set shiftwidth=2
" backspace behavior
set backspace=2
" command number, puts number at each line
set number
set laststatus=2
set mouse=a
" calculate line distance
set relativenumber
" incremental search
set incsearch
" result higlight
set hlsearch
" rename emmet command
let g:user_emmet_leader_key=','
set encoding=utf-8
"
" read using this encoding
" set fileencoding=iso-8859-1
" view
" set encoding=iso-8859-1

" space instead of tab
set expandtab
set softtabstop=2
